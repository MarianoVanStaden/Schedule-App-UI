<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:layout_marginStart="14dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="14dp"
    android:layout_marginBottom="24dp"
    android:orientation="vertical"
    app:cardCornerRadius="30dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="10dp"
            android:id="@+id/image_agenda"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/steel_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="125dp"
            android:background="@drawable/bg_item_rounded"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:lineSpacingMultiplier="1.2"
                android:lines="2"
                android:maxLines="2"
                android:text="UI Workshop - Pentingnya grid dalam proses design"
                android:textColor="@color/dark_late_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_agenda_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:text="09.00 - 09.30"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>